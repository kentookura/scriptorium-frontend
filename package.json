{
  "name": "scriptorium-frontend",
  "description": "A frontend with calendar functionality written in purescript",
  "author": "Kento Okura",
  "license": "MIT",
  "scripts": {
    "postinstall": "spago install",
    "clean": "rm -rf node_modules output .spago dist/*.js *.lock .cache",
    "build": "spago build",
    "test": "spago test",
    "serve": "spago build && esbuild --bundle index.js --servedir=dist",
    "bundle": "spago -x spago.production.dhall build && purs-backend-es bundle-app --main Main --minify --no-build --to dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentookura/scriptorium"
  },
  "dependencies": {
    "@types/node": "^18.8.2",
    "decimal.js": "^10.3.1",
    "ical-js-parser": "^0.7.0",
    "ical.js": "^1.5.0",
    "marked": "^4.0.15",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "esbuild": "^0.14.38",
    "fs": "^0.0.1-security",
    "purs-backend-es": "^1.1.0"
  }
}
